class Dveri:
    unlock_lock = 'отпереть'
    unlock = 'открыть'
    close_lock = 'запереть'
    close = 'закрыть'
    exit = 'выход'
    def dveri_na_zamke(self,schetchik=0):
        while True:
            deistvie = str(input('Откройте дверь и замок - ')).lower()
            try:
                if deistvie == self.unlock_lock:
                    self.dveri_zakriti()
                elif  deistvie == self.exit:
                    exit()
                elif  deistvie.isdigit():
                    raise TypeError('Вы ввели цифры, их вводить нельзя!')
                elif schetchik >= 1:
                    raise ProcessLookupError('Опять что-то ввели не так')
                else:
                    schetchik+=1
                    raise Exception('Вы ввели не то что надо')
            except TypeError as te:
                print(str(te))
                continue
            except Exception as ex:
                print(str(ex))
                continue
            except ProcessLookupError as prl:
                print(str(prl))
                continue
    def dveri_zakriti(self,schetchik=0):
        while True:
            deistvie = str(input('Замка нет, откройте дверь - ')).lower()
            try:
                if deistvie == self.unlock:
                    self.dveri_otkriti()
                elif deistvie == self.close_lock:
                    return
                elif deistvie == self.exit:
                    exit()
                elif  deistvie.isdigit():
                    raise TypeError('Вы ввели цифры, их вводить нельзя!')
                elif schetchik >= 1:
                    raise ProcessLookupError('Опять что-то ввели не так')
                else:
                    schetchik+=1
                    raise Exception('Вы ввели не то что надо')
            except TypeError as te:
                print(str(te))
                continue
            except Exception as ex:
                print(str(ex))
                continue
            except ProcessLookupError as prl:
                print(str(prl))
                continue
    def dveri_otkriti(self,schetchik=0):
        while True:
            deistvie = str(input('Дверь открыта, что будем делать дальше ?  ')).lower()
            try:
                if deistvie == self.close:
                    return
                elif deistvie == self.exit:
                    exit()
                elif deistvie.isdigit():
                    raise TypeError('Вы ввели цифры, их вводить нельзя!')
                elif schetchik >= 1:
                    raise ProcessLookupError('Опять что-то ввели не так')
                else:
                    schetchik += 1
                    raise Exception('Вы ввели не то что надо')
            except TypeError as te:
                print(str(te))
                continue
            except Exception as ex:
                print(str(ex))
                continue
            except ProcessLookupError as prl:
                print(str(prl))
                continue
dveri = Dveri()
dveri.dveri_na_zamke()

