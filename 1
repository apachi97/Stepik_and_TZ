class Doors:
    exit = 'выход'
    unlocked = 'запереть'
    locked = 'отпереть'
    opened = 'открыть'
    closed = 'закрыть'

    def __init__(self,sostoyanie='запереть'):
        self.sostoyanie = sostoyanie

    def _unlock(self,_input):
        self._input = _input
        if self._input != self.sostoyanie:
            try:
                if self._input == self.exit:
                    pass
                elif self._input == self.locked:
                    self.sostoyanie = self.locked
                    return print('Замок снят с двери')
                elif self._input.isdigit():
                    print('Цифры вводить нельзя')
                elif self._input == self.locked:
                    return print('Замок с двери снят')
                else:
                    print('Вы что-то ввели не так')
            except AttributeError :
                print('Цифры вводить нельзя!')
        elif self._input == self.unlocked:
            print('Дверь и так на замке')

    def _lock(self,_input):
        self._input = _input
        if self._input != self.sostoyanie:
            try:
                if self._input == self.exit:
                    pass
                elif self._input == self.unlocked:
                    self.sostoyanie = self.unlocked
                    return print('На дверь вешается замок')
                elif self._input == self.opened:
                    self.sostoyanie = self.opened
                    return print('Дверь открывается')
                elif self._input.isdigit():
                    print('Цифры вводить нельзя')
                else:
                    print('Вы что-то ввели не так')
            except AttributeError:
                print('Цифры вводить нельзя!')
        elif self._input == self.locked:
            print('Дверь и так без замка')

    def _open(self,_input):
        self._input = _input
        if self._input != self.sostoyanie:
            try:
                if self._input == self.exit:
                    pass
                elif self._input == self.closed:
                    self.sostoyanie = self.closed
                    return print('Дверь закрывается')
                elif self._input.isdigit():
                    print('Цифры вводить нельзя')
                else:
                    print('Вы что-то ввели не так')
            except AttributeError:
                print('Цифры вводить нельзя!')
        elif self._input == self.opened:
            print('Дверь и так открыта')

    def _close(self,_input):
        self._input = _input
        if self._input != self.sostoyanie:
            try:
                if self._input == self.exit:
                    pass
                elif self._input == self.unlocked:
                    self.sostoyanie = self.unlocked
                    return print('Дверь запирается на замок')
                elif self._input == self.opened:
                    self.sostoyanie = self.opened
                    print('Дверь открывается')
                elif self._input.isdigit():
                    print('Цифры вводить нельзя')
                else:
                    print('Вы что-то ввели не так')
            except AttributeError:
                print('Цифры вводить нельзя!')
        elif self._input == self.closed:
            print('Дверь и так закрыта')


doors = Doors()
